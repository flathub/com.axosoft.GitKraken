{
    "id": "com.axosoft.GitKraken",
    "runtime": "org.gnome.Platform",
    "runtime-version": "40",
    "sdk": "org.gnome.Sdk",
    "base": "org.electronjs.Electron2.BaseApp",
    "base-version": "20.08",
    "command": "gitkraken",
    "tags": [
        "proprietary"
    ],
    "separate-locales": false,
    "finish-args": [
        "--require-version=0.11.1",
        "--share=ipc",
        "--socket=x11",
        "--socket=pulseaudio",
        "--socket=ssh-auth",
        "--socket=pcsc",
        "--share=network",
        "--device=dri",
        "--filesystem=home",
        "--filesystem=/mnt",
        "--filesystem=/media",
        "--filesystem=/run/media",
        "--filesystem=xdg-run/gvfs",
        "--filesystem=xdg-run/gvfsd",
        "--talk-name=org.gtk.vfs",
        "--talk-name=org.gtk.vfs.*",
        "--talk-name=org.freedesktop.Notifications",
        "--talk-name=org.freedesktop.secrets",
        "--talk-name=org.freedesktop.Flatpak"
    ],
    "modules": [
        {
            "name": "ImageMagick",
            "config-opts": [
                "--enable-static=no",
                "--with-modules",
                "--disable-docs",
                "--disable-deprecated",
                "--without-autotrace",
                "--without-bzlib",
                "--without-djvu",
                "--without-dps",
                "--without-fftw",
                "--without-fontconfig",
                "--without-fpx",
                "--without-freetype",
                "--without-gvc",
                "--without-jbig",
                "--without-jpeg",
                "--without-lcms",
                "--without-lzma",
                "--without-magick-plus-plus",
                "--without-openexr",
                "--without-openjp2",
                "--without-pango",
                "--without-raqm",
                "--without-tiff",
                "--without-webp",
                "--without-wmf",
                "--without-x",
                "--without-xml",
                "--without-zlib"
            ],
            "cleanup": [
                "*"
            ],
            "sources": [
                {
                    "type": "archive",
                    "url": "https://imagemagick.org/download/releases/ImageMagick-7.0.10-7.tar.xz",
                    "sha256": "7a0365e20eeef2129cb8ffee1acf1d21cdbc2ea8b57ce2941c6ca0e935d4f843"
                }
            ]
        },
        {
            "name": "pcsc-lite",
            "config-opts": [
                "--disable-libudev",
                "--disable-libsystemd",
                "--without-systemdsystemunitdir",
                "--disable-serial",
                "--disable-usb",
                "--disable-documentation"
            ],
            "post-install": [
                "rm /app/sbin/pcscd",
                "rmdir /app/sbin || true"
            ],
            "sources": [
                {
                    "type": "archive",
                    "url": "https://salsa.debian.org/rousseau/PCSC/-/archive/1.9.2/PCSC-1.9.2.tar.bz2",
                    "sha256": "9be1f2639340cf48be25dd355f1534de619304c99042db1da36f1f84b5ac036d",
                    "x-checker-data": {
                        "type": "anitya",
                        "project-id": 2611,
                        "url-template": "https://salsa.debian.org/rousseau/PCSC/-/archive/$version/PCSC-$version.tar.bz2"
                    }
                }
            ]
        },
        {
            "name": "git",
            "buildsystem": "simple",
            "build-commands": [
                "install -Dm0755 $(which git) ${FLATPAK_DEST}/bin/",
                "install -Dm0755 $(which git-clang-format) ${FLATPAK_DEST}/bin/",
                "install -Dm0755 $(which git-cvsserver) ${FLATPAK_DEST}/bin/",
                "install -Dm0755 $(which git-receive-pack) ${FLATPAK_DEST}/bin/",
                "install -Dm0755 $(which git-shell) ${FLATPAK_DEST}/bin/",
                "install -Dm0755 $(which git-upload-archive) ${FLATPAK_DEST}/bin/",
                "install -Dm0755 $(which git-upload-pack) ${FLATPAK_DEST}/bin/"
            ]
        },
        {
            "name": "git-lfs",
            "buildsystem": "simple",
            "build-commands": [
                "install -Dm0755 git-lfs ${FLATPAK_DEST}/bin/"
            ],
            "sources": [
                {
                    "type": "archive",
                    "strip-components": 0,
                    "url": "https://github.com/git-lfs/git-lfs/releases/download/v2.13.3/git-lfs-linux-amd64-v2.13.3.tar.gz",
                    "sha256": "03197488f7be54cfc7b693f0ed6c75ac155f5aaa835508c64d68ec8f308b04c1",
                    "x-checker-data": {
                        "type": "anitya",
                        "project-id": 11551,
                        "url-template": "https://github.com/git-lfs/git-lfs/releases/download/v$version/git-lfs-linux-amd64-v$version.tar.gz"
                    }
                }
            ]
        },
        {
            "name": "gitkraken",
            "buildsystem": "simple",
            "build-commands": [
                ". ${FLATPAK_BUILDER_BUILDDIR}/build"
            ],
            "sources": [
                {
                    "type": "file",
                    "path": "apply_extra.sh"
                },
                {
                    "type": "file",
                    "path": "gitkraken-build.sh",
                    "dest-filename": "build"
                },
                {
                    "type": "file",
                    "path": "gitkraken.sh"
                },
                {
                    "type": "file",
                    "path": "com.axosoft.GitKraken.metainfo.xml"
                },
                {
                    "type": "file",
                    "dest-filename": "gitkraken.deb",
                    "url": "https://release.axocdn.com/linux/GitKraken-v7.7.1.deb",
                    "sha256": "4284795b721862b28d33491c0199bb2496157c7d12c3212e217249f141ff6c61",
                    "x-checker-data": {
                        "type": "html",
                        "url": "https://www.gitkraken.com/download",
                        "version-pattern": "Latest release: ((?:\\d+\\.)?(?:\\d+\\.)?\\d+)",
                        "url-template": "https://release.axocdn.com/linux/GitKraken-v$version.deb"
                    }
                },
                {
                    "type": "extra-data",
                    "filename": "gitkraken.deb",
                    "url": "https://release.axocdn.com/linux/GitKraken-v7.7.1.deb",
                    "sha256": "4284795b721862b28d33491c0199bb2496157c7d12c3212e217249f141ff6c61",
                    "size": 80050148,
                    "x-checker-data": {
                        "type": "html",
                        "url": "https://www.gitkraken.com/download",
                        "version-pattern": "Latest release: ((?:\\d+\\.)?(?:\\d+\\.)?\\d+)",
                        "url-template": "https://release.axocdn.com/linux/GitKraken-v$version.deb",
                        "is-main-source": true
                    }
                }
            ]
        }
    ]
}