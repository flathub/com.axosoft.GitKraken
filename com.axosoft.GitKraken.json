{
  "id": "com.axosoft.GitKraken",
  "runtime": "org.freedesktop.Platform",
  "runtime-version": "1.6",
  "sdk": "org.freedesktop.Sdk",
  "base": "io.atom.electron.BaseApp",
  "base-version": "stable",
  "command": "gitkraken",
  "tags": [
    "proprietary"
  ],
  "separate-locales": false,
  "finish-args": [
    "--require-version=0.11.1",
    "--share=ipc",
    "--socket=x11",
    "--socket=wayland",
    "--socket=ssh-auth",
    "--share=network",
    "--device=dri",
    "--filesystem=host",
    "--talk-name=org.freedesktop.secrets",
    "--env=LD_LIBRARY_PATH=/app/lib"
  ],
  "build-options": {
    "cflags": "-O2 -g -pipe -fstack-protector-strong -D_FORTIFY_SOURCE=2",
    "cxxflags": "-O2 -g -pipe -fstack-protector-strong -D_FORTIFY_SOURCE=2",
    "ldflags": "-fstack-protector-strong -Wl,-z,relro,-z,now"
  },
  "cleanup": [
    "/include",
    "/lib/pkgconfig",
    "/share/pkgconfig",
    "/share/aclocal",
    "/man",
    "/share/man",
    "/share/gtk-doc",
    "/share/doc",
    "*.la",
    "*.a"
  ],
  "modules": [
    {
      "name": "libxkbfile",
      "cleanup": [
        "/include",
        "/lib/*.la",
        "/lib/pkgconfig"
      ],
      "config-opts": [
        "--disable-static"
      ],
      "sources": [
        {
          "type": "archive",
          "url": "https://www.x.org/releases/individual/lib/libxkbfile-1.0.9.tar.bz2",
          "sha256": "51817e0530961975d9513b773960b4edd275f7d5c72293d5a151ed4f42aeb16a"
        }
      ]
    },
    {
      "name": "libcurl-gnutls",
      "config-opts": [
        "--disable-ldap",
        "--disable-ldaps",
        "--disable-manual",
        "--enable-ipv6",
        "--enable-threaded-resolver",
        "--without-gssapi",
        "--without-libidn",
        "--without-ssl",
        "--with-gnutls=/usr",
        "--with-ca-bundle='/etc/ssl/certs/ca-certificates.crt'"
      ],
      "cleanup": [
        "/bin"
      ],
      "post-install": [
        "mv /app/lib/libcurl{,-gnutls}.so.4.5.0",
        "rm /app/lib/libcurl.so*",
        "ln -s /app/lib/libcurl-gnutls.so.4.5.0 /app/lib/libcurl-gnutls.so.4"
      ],
      "sources": [
        {
          "type": "archive",
          "url": "https://curl.haxx.se/download/curl-7.61.0.tar.xz",
          "sha256": "ef6e55192d04713673b4409ccbcb4cb6cd723137d6e10ca45b0c593a454e1720"
        }
      ]
    },
    {
      "name": "git",
      "make-args": ["NO_PERL=1"],
      "make-install-args": ["NO_PERL=1"],
      "sources": [
        {
          "type": "archive",
          "url": "https://www.kernel.org/pub/software/scm/git/git-2.18.0.tar.xz",
          "sha256": "8b40be383a603147ae29337136c00d1c634bdfdc169a30924a024596a7e30e92"
        }
      ]
    },
    {
      "name": "git-lfs",
      "buildsystem": "simple",
      "build-commands": [
        "mkdir --parents /app/libexec/git-core/",
        "install -Dm0755 git-lfs /app/libexec/git-core/"
      ],
      "sources": [
        {
          "type": "archive",
          "strip-components": 0,
          "url": "https://github.com/git-lfs/git-lfs/releases/download/v2.5.1/git-lfs-linux-amd64-v2.5.1.tar.gz",
          "sha256": "9565fa9c2442c3982567a3498c9352cda88e0f6a982648054de0440e273749e7"
        }
      ]
    },
    {
      "name": "gitkraken",
      "buildsystem": "simple",
      "build-commands": [
        "install -Dm0755 apply_extra /app/bin/apply_extra",
        "install -Dm0755 gitkraken.sh /app/bin/gitkraken",
        "install -Dm0644 com.axosoft.GitKraken.png /app/share/icons/hicolor/512x512/apps/com.axosoft.GitKraken.png",
        "install -Dm0644 com.axosoft.GitKraken.appdata.xml /app/share/appdata/com.axosoft.GitKraken.appdata.xml",
        "install -Dm0644 gitkraken.desktop /app/share/applications/com.axosoft.GitKraken.desktop"
      ],
      "sources": [
        {
          "type": "script",
          "dest-filename": "apply_extra",
          "commands": [
            "tar -xf gitkraken.tar.gz",
            "rm -f gitkraken.tar.gz"
          ]
        },
        {
          "type": "script",
          "commands": [
            "exec env /app/extra/gitkraken/gitkraken"
          ],
          "dest-filename": "gitkraken.sh"
        },
        {
          "type": "file",
          "path": "com.axosoft.GitKraken.appdata.xml"
        },
        {
          "type": "file",
          "path": "gitkraken.desktop"
        },
        {
          "type": "file",
          "path": "com.axosoft.GitKraken.png"
        },
        {
          "type": "extra-data",
          "filename": "gitkraken.tar.gz",
          "only-arches": [
            "x86_64"
          ],
          "url": "https://release.gitkraken.com/linux/v4.0.2.tar.gz",
          "sha256": "cc46bc51ce1079f884b8e0eb8e128ace845b97cf26d99c4202ea89432794e927",
          "size": 108358100
        }
      ]
    }
  ]
}
