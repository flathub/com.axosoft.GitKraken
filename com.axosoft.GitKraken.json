{
  "id": "com.axosoft.GitKraken",
  "runtime": "org.freedesktop.Platform",
  "runtime-version": "18.08",
  "sdk": "org.freedesktop.Sdk",
  "base": "io.atom.electron.BaseApp",
  "base-version": "18.08",
  "command": "gitkraken",
  "tags": [
    "proprietary"
  ],
  "separate-locales": false,
  "finish-args": [
    "--require-version=0.11.1",
    "--share=ipc",
    "--socket=x11",
    "--socket=wayland",
    "--socket=ssh-auth",
    "--share=network",
    "--device=dri",
    "--filesystem=host",
    "--talk-name=org.freedesktop.secrets"
  ],
  "cleanup": [
    "/include",
    "/lib/pkgconfig",
    "/share/pkgconfig",
    "/share/aclocal",
    "/man",
    "/share/man",
    "/share/gtk-doc",
    "/share/doc",
    "*.la",
    "*.a"
  ],
  "modules": [
    {
      "name": "libcurl-gnutls",
      "config-opts": [
        "--disable-ldap",
        "--disable-ldaps",
        "--disable-manual",
        "--enable-ipv6",
        "--enable-threaded-resolver",
        "--without-gssapi",
        "--without-libidn",
        "--without-ssl",
        "--with-gnutls=/usr",
        "--with-ca-bundle='/etc/ssl/certs/ca-certificates.crt'"
      ],
      "cleanup": [
        "/bin"
      ],
      "post-install": [
        "mv /app/lib/libcurl{,-gnutls}.so.4.5.0",
        "rm /app/lib/libcurl.so*",
        "ln -s /app/lib/libcurl-gnutls.so.4.5.0 /app/lib/libcurl-gnutls.so.4"
      ],
      "sources": [
        {
          "type": "archive",
          "url": "https://curl.haxx.se/download/curl-7.61.1.tar.xz",
          "sha256": "3d5913d6a39bd22e68e34dff697fd6e4c3c81563f580c76fca2009315cd81891"
        }
      ]
    },
    {
      "name": "git",
      "make-args": ["NO_TCLTK=YesPlease"],
      "make-install-args": ["NO_TCLTK=YesPlease"],
      "post-install": [
        "find . -type f -name perllocal.pod -delete"
      ],
      "sources": [
        {
          "type": "archive",
          "url": "https://www.kernel.org/pub/software/scm/git/git-2.19.1.tar.xz",
          "sha256": "345056aa9b8084280b1b9fe1374d232dec05a34e8849028a20bfdb56e920dbb5"
        }
      ]
    },
    {
      "name": "git-lfs",
      "buildsystem": "simple",
      "build-commands": [
        "mkdir --parents /app/libexec/git-core/",
        "install -Dm0755 git-lfs /app/libexec/git-core/"
      ],
      "sources": [
        {
          "type": "archive",
          "strip-components": 0,
          "url": "https://github.com/git-lfs/git-lfs/releases/download/v2.5.2/git-lfs-linux-amd64-v2.5.2.tar.gz",
          "sha256": "624396e8994578ac38c3e5987889be56dba453c378c0675d56cffbc5b8972aa5"
        }
      ]
    },
    {
      "name": "gitkraken",
      "buildsystem": "simple",
      "build-commands": [
        "install -Dm0755 apply_extra /app/bin/apply_extra",
        "install -Dm0755 gitkraken.sh /app/bin/gitkraken",
        "install -Dm0644 com.axosoft.GitKraken.png /app/share/icons/hicolor/512x512/apps/com.axosoft.GitKraken.png",
        "install -Dm0644 com.axosoft.GitKraken.appdata.xml /app/share/appdata/com.axosoft.GitKraken.appdata.xml",
        "install -Dm0644 gitkraken.desktop /app/share/applications/com.axosoft.GitKraken.desktop"
      ],
      "sources": [
        {
          "type": "script",
          "dest-filename": "apply_extra",
          "commands": [
            "tar -xf gitkraken.tar.gz",
            "rm -f gitkraken.tar.gz"
          ]
        },
        {
          "type": "script",
          "commands": [
            "exec env /app/extra/gitkraken/gitkraken"
          ],
          "dest-filename": "gitkraken.sh"
        },
        {
          "type": "file",
          "path": "com.axosoft.GitKraken.appdata.xml"
        },
        {
          "type": "file",
          "path": "gitkraken.desktop"
        },
        {
          "type": "file",
          "path": "com.axosoft.GitKraken.png"
        },
        {
          "type": "extra-data",
          "filename": "gitkraken.tar.gz",
          "only-arches": [
            "x86_64"
          ],
          "url": "https://release.gitkraken.com/linux/GitKraken-18.04-v4.0.6.tar.gz",
          "sha256": "41d5030cc2249519fedfc2b927c78ddba064c863db0195a3790fc3c9d95f7f7a",
          "size": 94810844
        }
      ]
    }
  ]
}
