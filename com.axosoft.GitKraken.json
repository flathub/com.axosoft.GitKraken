{
    "id": "com.axosoft.GitKraken",
    "runtime": "org.freedesktop.Sdk",
    "runtime-version": "22.08",
    "sdk": "org.freedesktop.Sdk",
    "base": "org.electronjs.Electron2.BaseApp",
    "base-version": "22.08",
    "command": "gitkraken",
    "tags": [
        "proprietary"
    ],
    "separate-locales": false,
    "finish-args": [
        "--require-version=0.11.1",
        "--share=ipc",
        "--socket=x11",
        "--socket=pulseaudio",
        "--socket=ssh-auth",
        "--socket=pcsc",
        "--share=network",
        "--device=dri",
        "--filesystem=home",
        "--filesystem=/mnt",
        "--filesystem=/media",
        "--filesystem=/run/media",
        "--filesystem=xdg-run/gvfs",
        "--filesystem=xdg-run/gvfsd",
        "--talk-name=org.gtk.vfs.*",
        "--talk-name=org.freedesktop.Notifications",
        "--talk-name=org.freedesktop.secrets"
    ],
    "modules": [
        {
            "name": "ImageMagick",
            "config-opts": [
                "--enable-static=no",
                "--with-modules",
                "--disable-docs",
                "--disable-deprecated",
                "--without-autotrace",
                "--without-bzlib",
                "--without-djvu",
                "--without-dps",
                "--without-fftw",
                "--without-fontconfig",
                "--without-fpx",
                "--without-freetype",
                "--without-gvc",
                "--without-jbig",
                "--without-jpeg",
                "--without-lcms",
                "--without-lzma",
                "--without-magick-plus-plus",
                "--without-openexr",
                "--without-openjp2",
                "--without-pango",
                "--without-raqm",
                "--without-tiff",
                "--without-webp",
                "--without-wmf",
                "--without-x",
                "--without-xml",
                "--without-zlib"
            ],
            "cleanup": [
                "*"
            ],
            "sources": [
                {
                    "type": "archive",
                    "url": "https://imagemagick.org/archive/releases/ImageMagick-7.0.10-7.tar.xz",
                    "sha256": "7a0365e20eeef2129cb8ffee1acf1d21cdbc2ea8b57ce2941c6ca0e935d4f843"
                }
            ]
        },
        "shared-modules/libsecret/libsecret.json",
        {
            "name": "krb5",
            "subdir": "src",
            "config-opts": [
                "--localstatedir=/var/lib",
                "--sbindir=${FLATPAK_DEST}/bin",
                "--disable-static",
                "--disable-rpath"
            ],
            "sources": [
                {
                    "type": "archive",
                    "url": "https://github.com/krb5/krb5/archive/refs/tags/krb5-1.20.1-final.tar.gz",
                    "sha256": "ec3861c3bec29aa8da9281953c680edfdab1754d1b1db8761c1d824e4b25496a",
                    "x-checker-data": {
                        "type": "anitya",
                        "project-id": 13287,
                        "stable-only": true,
                        "url-template": "https://github.com/krb5/krb5/archive/refs/tags/krb5-$version.tar.gz"
                    }
                },
                {
                    "type": "shell",
                    "dest": "src",
                    "commands": [
                        "autoreconf -si"
                    ]
                }
            ],
            "cleanup": [
                "/bin",
                "/include",
                "/lib/pkgconfig",
                "/share/et",
                "/share/examples",
                "/share/man"
            ]
        },
        {
            "name": "krb5-config",
            "buildsystem": "simple",
            "build-commands": [
                "install -Dm0644 krb5.conf -t /app/etc/"
            ],
            "sources": [
                {
                    "type": "file",
                    "path": "files/krb5/krb5.conf"
                }
            ]
        },
        {
            "name": "pcsc-lite",
            "config-opts": [
                "--disable-libudev",
                "--disable-libsystemd",
                "--without-systemdsystemunitdir",
                "--disable-serial",
                "--disable-usb",
                "--disable-documentation"
            ],
            "cleanup": [
                "/include",
                "/lib/pkgconfig"
            ],
            "post-install": [
                "rm /app/sbin/pcscd",
                "rmdir /app/sbin || true"
            ],
            "sources": [
                {
                    "type": "archive",
                    "url": "https://salsa.debian.org/rousseau/PCSC/-/archive/1.9.9/PCSC-1.9.9.tar.bz2",
                    "sha256": "09067c3d807ab11509565899b7a46aec8dffd9e14bee9e6e2cdfddd9f8f49173",
                    "x-checker-data": {
                        "type": "anitya",
                        "project-id": 2611,
                        "url-template": "https://salsa.debian.org/rousseau/PCSC/-/archive/$version/PCSC-$version.tar.bz2"
                    }
                }
            ]
        },
        {
            "name": "git-lfs",
            "buildsystem": "simple",
            "build-commands": [
                "PREFIX=${FLATPAK_DEST} ./install.sh"
            ],
            "sources": [
                {
                    "type": "archive",
                    "strip-components": 1,
                    "url": "https://github.com/git-lfs/git-lfs/releases/download/v3.3.0/git-lfs-linux-amd64-v3.3.0.tar.gz",
                    "sha256": "6a4e6bd7d06d5c024bc70c8ee8c9da143ffc37d2646e252a17a6126d30cdebc1",
                    "x-checker-data": {
                        "type": "json",
                        "url": "https://api.github.com/repos/git-lfs/git-lfs/releases/latest",
                        "url-query": ".assets[] | select(.name==\"git-lfs-linux-amd64-\" + $version + \".tar.gz\") | .browser_download_url",
                        "version-query": ".tag_name"
                    }
                }
            ]
        },
        {
            "name": "gitkraken",
            "buildsystem": "simple",
            "build-commands": [
                ". ${FLATPAK_BUILDER_BUILDDIR}/build"
            ],
            "sources": [
                {
                    "type": "file",
                    "path": "apply_extra.sh"
                },
                {
                    "type": "file",
                    "path": "gitkraken-build.sh",
                    "dest-filename": "build"
                },
                {
                    "type": "file",
                    "path": "gitkraken.sh"
                },
                {
                    "type": "file",
                    "path": "com.axosoft.GitKraken.metainfo.xml"
                },
                {
                    "type": "file",
                    "dest-filename": "gitkraken.deb",
                    "url": "https://release.axocdn.com/linux/GitKraken-v9.2.1.deb",
                    "sha256": "ddefb2383bf814753a91dc50753ee3d251828ff5c97c0149c2c8f7b391cd845d",
                    "x-checker-data": {
                        "type": "html",
                        "url": "https://www.gitkraken.com/download",
                        "version-pattern": "Latest release: ((?:\\d+\\.)?(?:\\d+\\.)?\\d+)",
                        "url-template": "https://release.axocdn.com/linux/GitKraken-v$version.deb"
                    }
                },
                {
                    "type": "extra-data",
                    "filename": "gitkraken.deb",
                    "url": "https://release.axocdn.com/linux/GitKraken-v9.2.1.deb",
                    "sha256": "ddefb2383bf814753a91dc50753ee3d251828ff5c97c0149c2c8f7b391cd845d",
                    "size": 102540032,
                    "x-checker-data": {
                        "type": "html",
                        "url": "https://www.gitkraken.com/download",
                        "version-pattern": "Latest release: ((?:\\d+\\.)?(?:\\d+\\.)?\\d+)",
                        "url-template": "https://release.axocdn.com/linux/GitKraken-v$version.deb",
                        "is-main-source": true
                    }
                }
            ]
        }
    ]
}
